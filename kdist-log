#! /bin/bash

SUMMARY="Show what changed between releases"

USAGE="[-v] [--all] [--since=<since>] [<git-log opts>] [<rev>] [-- <module>]"

declare -a logs
declare -a gitopts
all=false
modules=
since=
from=HEAD

while :
do
	case "$1" in
	-v|--verbose)
		verbose=yes ;;
	-h|--he|--hel|--help)
		kdist__usage ;;
	--all)
		all=true ;;
	--since=*)
		since=${1#--since=} ;;
	--)
		break ;;
	-*)
		gitopts+=("$1") ;;
	*)
		break
	esac
	shift
done

case $# in
0)
	modules=project ;;
1)
	from=$1
	modules=project ;;
2|3)
	case $1,$2 in
	--,*)	modules=$2 ;;
	*,--)	from=$1; modules=$3;;
	*)	kdist__usage;;
	esac ;;
*)
	kdist__usage
esac


kdist__cd_topdir

if test -z "$since"; then
	since=$(release__get_parent $from) ||
	die "kdist-log failed to retrieve a parent release."
fi

if $all; then
	modules="project $(module__list)"
fi

log_kernel () (
	f=$(module__get_sha1 $1 kernel) &&
	s=$(module__get_sha1 $2 kernel) ||
	return

	kdist__cd_repository kernel
	tag_f=$(release__describe $f) &&
	tag_s=$(release__describe $s) &&
	#
	# Specify unconditionnaly 'upstream' and 'limit'. They will be
	# ignored if they're ancestors of merge-base(f,s).
	#
	kdist whatchanged --header $s $f ${tag_f%-*} ${tag_s%-*} 2>/dev/null
)

log_configs () {
	set -o pipefail
	git diff --submodule $2 $1 -- configs |
	sed -e "1s/^Submodule/\*/"
}

log_kdist () {
	set -o pipefail
	git diff --submodule $2 $1 -- kdist |
	sed -e "1s/^Submodule/\*/"
}

log_project () {
	echo "* Project $since..$(git describe --always $from)"
	git log --pretty=tformat:"  > %s" $since..$from
}

for m in $modules
do
	case $(type -t log_$m) in
	function)
		logs+=("$(log_$m $from $since)") || exit ;;
	*)
		die "Unkown module '$m'"
	esac
done

for i in ${!logs[*]}
do
	if test -n "${logs[$i]}"; then
		[ $i -gt 0 ] && echo
		echo "${logs[$i]}"
	fi
done
